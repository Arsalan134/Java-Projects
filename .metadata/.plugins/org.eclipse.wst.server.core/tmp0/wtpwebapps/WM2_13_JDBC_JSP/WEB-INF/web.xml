<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>WM2_13_JDBC_JSP</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<listener> <!-- qhen app runs ehat happens. Who is listening to startup -->
		<listener-class>com.java.db.DatabaseInitializer</listener-class>
	</listener>

	<context-param>
		<param-name>DB_DRIVER_CLASS</param-name>
		<param-value>com.mysql.jdbc.Driver</param-value>
	</context-param>

	<context-param>
		<param-name>DB_URL</param-name>
		<param-value>jdbc:mysql://localhost:3306/test</param-value>
	</context-param>

	<context-param>
		<param-name>DB_USERNAME</param-name>
		<param-value>Arsalan</param-value>
	</context-param>

	<context-param>
		<param-name>DB_PASSWORD</param-name>
		<param-value>Azerbaijan134</param-value>
	</context-param>
</web-app>